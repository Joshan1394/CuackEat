<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CuackEat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ut_orange</item>
        <item name="colorPrimaryVariant">@color/ochre</item>
        <item name="colorPrimaryDark">@color/sinopia</item>
        <item name="colorOnPrimary">@color/champagne_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fern_green</item>
        <item name="colorSecondaryVariant">@color/claret</item>
        <item name="colorOnSecondary">@color/smoky_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CuackEat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecyclerView.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecyclerView.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>