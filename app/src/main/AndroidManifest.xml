<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cuackeat">

    <!--Se agrega permisos para acceso a internet-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--SE AGREGA PERMISO PARA LEE UN DISCO EXTERNO, IMPORTANTE PARA LEER LAS IMAGENES DE LA GALERIA-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".Models.UserApplication"
        android:theme="@style/Theme.CuackEat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".EditPasswordActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".CreateReviewActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".EditReviewActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainAlbumActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CuackEat.NoActionBar"
            android:exported="true">
        </activity>
        <activity android:name=".AlbumActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CuackEat.NoActionBar"
            android:exported="true">
        </activity>
        <activity android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CuackEat.NoActionBar"
            android:exported="true">
        </activity>
        <activity android:name=".RestaurantDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CuackEat.NoActionBar"
            android:exported="true">
        </activity>
        <activity android:name=".ReviewDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CuackEat.NoActionBar"
            android:exported="true">
        </activity>
    </application>

</manifest>